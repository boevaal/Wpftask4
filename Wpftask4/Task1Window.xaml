<Window x:Class="WPFtask4.Task1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задание 1" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel Margin="0,10,0,-10">
            <TextBlock Text="Введите A:"/>
            <TextBox x:Name="InputA" Margin="0,5,0,10"/>
            <TextBlock Text="Введите B:"/>
            <TextBox x:Name="InputB" Margin="0,5,0,10"/>
            <Button Content="Рассчитать сумму" Click="CalculateSum_Click" Margin="0,10,0,0"/>
            <Button Content="Показать нечетные числа" Click="ShowOddNumbers_Click" Margin="0,5,0,10"/>
            <TextBlock x:Name="ResultBlock" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
